#!/usr/bin/env bash

# Try stop Walker via systemd scope
if systemctl --user stop "app-Hyprland-walker-*.scope" 2>/dev/null; then
    restarted_with="systemctl"
else
# Or use pkill
    pkill walker
    restarted_with="pkill"
fi

# Start Walker again
uwsm app -- walker --gapplication-service > /dev/null 2>&1 &
notify-send "Walker" "Restarted with $restarted_with"
